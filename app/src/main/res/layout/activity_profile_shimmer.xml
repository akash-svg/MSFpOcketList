<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flash_white">


    <LinearLayout
        android:id="@+id/infoLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/list_item_hq_background"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/flash_white" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/flash_white" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/flash_white" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="@color/flash_white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/emailLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/list_item_hq_background"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoLay">

        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@color/flash_white"
            android:padding="6dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/flash_white"
            android:padding="6dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneOneLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/list_item_hq_background"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailLay">

        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@color/flash_white"
            android:padding="6dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/flash_white"
            android:padding="6dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneTwoLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/list_item_hq_background"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneOneLay">

        <TextView
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@color/flash_white"
            android:padding="6dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_alignParentEnd="true"
            android:background="@color/flash_white"
            android:padding="6dp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>